# Ghost CMS Configuration
# Your Ghost site URL (e.g., https://your-site.ghost.io)
GHOST_URL=https://your-ghost-site.ghost.io

# Content API Key (public, for reading posts)
# Get this from Ghost Admin → Settings → Integrations → Add custom integration
GHOST_CONTENT_API_KEY=your_content_api_key_here

# Admin API Key (private, for publishing posts)
# Get this from Ghost Admin → Settings → Integrations → Add custom integration
GHOST_ADMIN_API_KEY=your_admin_api_key_here

# Instagram Integration (Optional)
# Instagram Basic Display API token
INSTAGRAM_TOKEN=your_instagram_token_here

# Newsletter Service (Optional)
# API key for your newsletter service (ConvertKit, Mailchimp, etc.)
NEWSLETTER_API_KEY=your_newsletter_service_key_here

# Debug Mode (Optional)
# Set to 'true' to enable debug logging
DEBUG=false
